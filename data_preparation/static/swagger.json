{
  "openapi": "3.0.0",
  "info": {
    "description": "This is a REST API with python flask librarie",
    "version": "1.0.0",
    "title": "Data preparation microservice",
    "contact": {
      "email": "a.mecheref@esi-sba.dz"
    },
    "license": {
      "name": "ESI SBA",
      "url": "http://esi-sba.dz"
    }
  },
  "servers": [
    {"url": "/"}
  ],
  "tags": [
    {
      "name": "Preparation",
      "description": "Operations about preparation image"
    }
  ],
  "paths": {
    "/prepare": {
      "post": {
        "tags": [
          "Preparation"
        ],
        "summary": "takes the real picture , croppe the v5 , cut it into several piece according to the pulse number ",
        "requestBody": {
          "description": "Returns cropped* images",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Preparation"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/light_prepare": {
      "post": {
        "tags": [
          "Preparation"
        ],
        "summary": "takes the v5 , filter black and white,  cut it into several piece according to the pulse number ",
        "requestBody": {
          "description": "Returns cropped* images",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/LightPreparation"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/file2image": {
      "post": {
        "tags": [
          "Preparation"
        ],
        "summary": "takes a file .txt or .csv, according to the sampling rate number ",
        "requestBody": {
          "description": "Returns multiples images",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/File2Image"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/file2files": {
      "post": {
        "tags": [
          "Preparation"
        ],
        "summary": "takes a file .txt or .csv, according to the sampling rate number cut it into several .txt",
        "requestBody": {
          "description": "Returns multiples files",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/File2Files"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Preparation": {
        "type": "object",
        "properties": {
          "real_image": {
            "contentType": "image/jpeg,image/png",
            "type": "string",
            "format": "binary"
          },
          "p1": {
            "type": "string",
            "format": "string"
          },
          "p2": {
            "type": "string",
            "format": "string"
          },
          "pulses": {
            "type": "integer",
            "format": "integer"
          }
        }
      },
      "LightPreparation": {
        "type": "object",
        "properties": {
          "v5": {
            "contentType": "image/jpeg,image/png",
            "type": "string",
            "format": "binary"
          },
          "pulses": {
            "type": "integer",
            "format": "integer"
          }
        }
      },
      "File2Image": {
        "type": "object",
        "properties": {
          "myfile": {
            "contentType": "file.txt/file.csv",
            "type": "string",
            "format": "binary"
          },
          "rate": {
            "type": "integer",
            "format": "integer"
          }
        }
      },
      "File2Files": {
        "type": "object",
        "properties": {
          "myfile": {
            "contentType": "file.txt/file.csv",
            "type": "string",
            "format": "binary"
          },
          "rate": {
            "type": "integer",
            "format": "integer"
          }
        }
      }
    }
  }
}